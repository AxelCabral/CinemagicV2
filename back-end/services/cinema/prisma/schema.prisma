generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cinema {
   id            String @id @default(uuid())
   name          String
   local         String 
   country       String
   movie_theater String @unique
   owner         Employeer @relation("owner", fields: [movie_theater], references: [id])  

   @@map("cinema")
}

model Employeer {
   id           String @id @default(uuid())
   name         String
   email        String @unique 
   phone_number String
   movie_theater Cinema? @relation("owner")

   @@map("employeer")
}