generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Sales {
  id          String   @id @default(uuid())
  value       Float
  type        String
  description String
  cinema_id   String
  saleDate    DateTime
  userID      String

  @@map("sales")
}

model Products {
  id     String @id @default(uuid())
  urlImg String
  price  Float
  name   String

  @@map("products")
}

model Combo {
  id           String  @id @default(uuid())
  urlImg       String
  name         String
  active       Boolean
  promotional  Float   @default(0)
  totalPrice   Float   @default(0)

  @@map("combo")
}

