// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Sales {
  id          String   @id @default(uuid())
  value       Float
  type        String
  description String
  cinema_id   String
  createdAt   DateTime @default(now())

  @@map("sales")
}

model Products {
  id     String @id @default(uuid())
  urlImg String
  price  Float
  name   String

  @@map("products")
}